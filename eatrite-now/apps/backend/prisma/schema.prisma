// EatRite - Enterprise B2B Corporate Wellness & Meal Operations Platform
// Enterprise-Grade Schema for Fortune 500 Compliance

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// BILLING & FINANCIAL ENUMS (IMMUTABLE)
// ============================================================================

enum InvoiceStatus {
  DRAFT
  ISSUED
  PAID
  OVERDUE
  CANCELLED
}

enum InvoiceLineItemType {
  MEAL
  SUBSCRIPTION
  DISCOUNT
  CREDIT
  ADJUSTMENT
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentMethod {
  CREDIT_CARD
  ACH
  WIRE_TRANSFER
  NET_30
  NET_60
}

// ============================================================================
// RBAC ENUMS
// ============================================================================

enum UserRole {
  SUPER_ADMIN       // Platform administrator
  COMPANY_ADMIN     // Corporate administrator
  FINANCE_USER      // Financial/billing access
  OPERATIONS_USER   // Order management
  EMPLOYEE          // Limited end-user access
}

// ============================================================================
// CORE USER MODEL (RBAC-ENABLED)
// ============================================================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  phone     String?
  role      UserRole @default(EMPLOYEE)
  companyId String
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? // Soft delete for PII compliance

  // Relationships
  company            Company            @relation(fields: [companyId], references: [id])
  subscriptions      Subscription[]
  orders             Order[]
  preferences        UserPreference?
  profile            UserProfile?
  wellnessScore      WellnessScore[]
  achievements       UserAchievement[]
  auditLogsPerformed AuditLog[]         @relation("PerformedBy")
  accessLogs         AccessLog[]

  @@index([companyId])
  @@index([email])
  @@index([role])
  @@map("users")
}

model UserProfile {
  id                  String   @id @default(cuid())
  userId              String   @unique
  age                 Int
  gender              String
  height              Float    // in cm
  weight              Float    // in kg
  activityLevel       String
  healthGoals         String
  dietaryRestrictions String?
  allergies           String?
  mealsPerDay         Int      @default(3)
  weeklyBudget        String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}

model UserPreference {
  id            String   @id @default(cuid())
  userId        String   @unique
  dietaryGoals  String[]
  allergies     String[]
  dislikes      String[]
  mealsPerWeek  Int      @default(10)
  calorieTarget Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  meals Meal[]

  @@map("categories")
}

model Meal {
  id              String   @id @default(cuid())
  name            String
  description     String
  shortDescription String?
  imageUrl        String?
  localImagePath  String? // Local branded image path
  categoryId      String
  ingredients     String[]
  allergens       String[]
  nutritionFacts  Json
  priceCents      Int
  calories        Int
  protein         Int
  carbs           Int
  fat             Int
  fiber           Int?
  sugar           Int?
  sodium          Int?
  isActive        Boolean  @default(true)
  isPopular       Boolean  @default(false)
  prepTime        Int? // minutes
  spiceLevel      Int?     @default(0) // 0-5 scale
  cuisineType     String?  // 'italian', 'asian', 'mediterranean'
  complexity      String?  @default("moderate") // 'simple', 'moderate', 'complex'
  wellnessScore   Int?     @default(70) // 0-100 wellness rating
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  category         Category         @relation(fields: [categoryId], references: [id])
  orderItems       OrderItem[]
  bulkOrderItems   BulkOrderItem[]
  weeklyMenuMeals  WeeklyMenuMeal[]
  featuredInMenus  WeeklyMenu[]

  @@map("meals")
}

model Plan {
  id                String   @id @default(cuid())
  name              String
  description       String
  mealsPerWeek      Int
  pricePerMealCents Int
  totalPriceCents   Int
  isActive          Boolean  @default(true)
  features          String[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  subscriptions Subscription[]

  @@map("plans")
}

model Subscription {
  id              String            @id @default(cuid())
  userId          String
  planId          String
  status          SubscriptionStatus @default(ACTIVE)
  startDate       DateTime
  nextDeliveryDate DateTime?
  pausedUntil     DateTime?
  cancelledAt     DateTime?
  stripeSubscriptionId String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  plan   Plan   @relation(fields: [planId], references: [id])
  orders Order[]

  @@map("subscriptions")
}

model Order {
  id             String      @id @default(cuid())
  userId         String
  companyId      String
  subscriptionId String?
  status         OrderStatus @default(PENDING)
  orderNumber    String      @unique
  subtotalCents  Int
  taxCents       Int
  shippingCents  Int
  totalCents     Int
  deliveryDate   DateTime?
  deliveredAt    DateTime?
  trackingNumber String?
  deliveryAddress String
  deliveryNotes  String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])
  items        OrderItem[]

  @@index([companyId])
  @@index([userId])
  @@index([orderNumber])
  @@index([status])
  @@map("orders")
}

model OrderItem {
  id           String  @id @default(cuid())
  orderId      String
  mealId       String
  quantity     Int
  priceCents   Int

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  meal  Meal  @relation(fields: [mealId], references: [id])

  @@map("order_items")
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
}

// ============================================================================
// ENTERPRISE BILLING MODELS (TIER 1 - IMMUTABLE, AUDITED)
// ============================================================================

model Invoice {
  id            String        @id @default(cuid())
  companyId     String
  invoiceNumber String        @unique
  periodStart   DateTime
  periodEnd     DateTime
  status        InvoiceStatus @default(DRAFT)
  subtotalCents Int
  taxCents      Int
  totalCents    Int
  currency      String        @default("USD")
  dueDate       DateTime
  issuedAt      DateTime?
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  company   Company             @relation(fields: [companyId], references: [id])
  lineItems InvoiceLineItem[]
  payments  PaymentRecord[]

  @@index([companyId])
  @@index([invoiceNumber])
  @@index([status])
  @@index([dueDate])
  @@map("invoices")
}

model InvoiceLineItem {
  id             String              @id @default(cuid())
  invoiceId      String
  type           InvoiceLineItemType
  description    String
  quantity       Int
  unitPriceCents Int
  totalCents     Int
  metadata       Json?
  createdAt      DateTime            @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("invoice_line_items")
}

model PaymentRecord {
  id                    String        @id @default(cuid())
  invoiceId             String?
  companyId             String
  stripePaymentIntentId String?       @unique
  amountCents           Int
  status                PaymentStatus @default(PENDING)
  paymentMethod         PaymentMethod @default(CREDIT_CARD)
  failureReason         String?
  metadata              Json?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  invoice   Invoice?   @relation(fields: [invoiceId], references: [id])
  company   Company    @relation(fields: [companyId], references: [id])

  @@index([invoiceId])
  @@index([companyId])
  @@index([status])
  @@index([stripePaymentIntentId])
  @@map("payment_records")
}

model AuditLog {
  id          String   @id @default(cuid())
  entityType  String
  entityId    String
  action      String
  performedBy String?
  ipAddress   String?
  userAgent   String?
  metadata    Json?
  createdAt   DateTime @default(now())

  user    User?    @relation("PerformedBy", fields: [performedBy], references: [id])

  @@index([entityType, entityId])
  @@index([performedBy])
  @@index([createdAt])
  @@map("audit_logs")
}

model AccessLog {
  id         String   @id @default(cuid())
  userId     String
  resource   String
  action     String
  ipAddress  String
  userAgent  String?
  success    Boolean
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([resource])
  @@index([createdAt])
  @@map("access_logs")
}

// ============================================================================
// CORPORATE MODELS
// ============================================================================

// Corporate models
model Company {
  id                String      @id @default(cuid())
  name              String
  code              String      @unique
  email             String      @unique
  phone             String?
  industry          String?
  employeeCount     Int?
  billingAddress    String?
  tier              CompanyTier @default(TIER_A)
  isActive          Boolean     @default(true)
  billingContact    String?
  billingEmail      String?
  employeeLimit     Int?
  contractStart     DateTime?
  contractEnd       DateTime?
  paymentTerms      String      @default("NET_30")
  onboardingCompleted    Boolean  @default(false)
  onboardingCompletedAt  DateTime?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Relationships
  users              User[]
  bulkOrders         BulkOrder[]
  corporateAnalytics CorporateAnalytics[]
  invoices           Invoice[]
  paymentRecords     PaymentRecord[]

  @@index([code])
  @@index([tier])
  @@map("companies")
}

model BulkOrder {
  id             String          @id @default(cuid())
  companyId      String
  adminUserId    String
  orderDate      DateTime
  deliveryDate   DateTime
  totalMeals     Int
  totalAmountCents Int
  status         BulkOrderStatus @default(PENDING)
  recurring      Boolean         @default(false)
  frequency      String?
  notes          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  company Company         @relation(fields: [companyId], references: [id])
  items   BulkOrderItem[]

  @@index([companyId])
  @@index([status])
  @@map("bulk_orders")
}

model BulkOrderItem {
  id          String    @id @default(cuid())
  bulkOrderId String
  mealId      String
  quantity    Int
  priceCents  Int

  bulkOrder   BulkOrder @relation(fields: [bulkOrderId], references: [id], onDelete: Cascade)
  meal        Meal      @relation(fields: [mealId], references: [id])

  @@map("bulk_order_items")
}

// Wellness & Gamification models
model WellnessScore {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @db.Date
  score     Int      // Daily wellness score (0-100)
  calories  Int?
  protein   Int?
  vegetables Int?
  hydration Int?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("wellness_scores")
}

model Achievement {
  id          String   @id @default(cuid())
  name        String
  description String
  icon        String
  points      Int
  category    String   // 'health', 'consistency', 'social'
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  userAchievements UserAchievement[]

  @@map("achievements")
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  earnedAt      DateTime @default(now())
  points        Int

  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id])

  @@unique([userId, achievementId])
  @@map("user_achievements")
}

// Analytics models
model CorporateAnalytics {
  id                  String   @id @default(cuid())
  companyId           String
  weekStarting        DateTime @db.Date
  totalOrders         Int      @default(0)
  totalEmployees      Int      @default(0)
  activeEmployees     Int      @default(0)
  participationRate   Decimal  @db.Decimal(5, 2) @default(0)
  avgWellnessScore    Decimal? @db.Decimal(5, 2)
  totalSpend          Decimal  @db.Decimal(10, 2) @default(0)
  topMeals            Json? // Array of meal IDs with counts
  createdAt           DateTime @default(now())

  company             Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, weekStarting])
  @@map("corporate_analytics")
}

// ============================================================================
// MEAL OPERATIONS MODELS
// ============================================================================

// Weekly Menu Management
model WeeklyMenu {
  id          String   @id @default(cuid())
  weekStart   DateTime @db.Date
  weekEnd     DateTime @db.Date
  isActive    Boolean  @default(false)
  featuredMealId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  meals       WeeklyMenuMeal[]
  featuredMeal Meal? @relation(fields: [featuredMealId], references: [id])

  @@unique([weekStart, weekEnd])
  @@map("weekly_menus")
}

model WeeklyMenuMeal {
  id           String     @id @default(cuid())
  weeklyMenuId String
  mealId       String
  displayOrder Int        @default(0)
  isSpecial    Boolean    @default(false)

  weeklyMenu   WeeklyMenu @relation(fields: [weeklyMenuId], references: [id], onDelete: Cascade)
  meal         Meal       @relation(fields: [mealId], references: [id])

  @@unique([weeklyMenuId, mealId])
  @@map("weekly_menu_meals")
}

// ============================================================================
// ENUMS
// ============================================================================

enum CompanyTier {
  TIER_A  // 10-50 employees
  TIER_B  // 51-200 employees  
  TIER_C  // 201-1000 employees
  TIER_D  // 1000+ employees (Enterprise)
}

enum BulkOrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  SHIPPED
  DELIVERED
  CANCELLED
}