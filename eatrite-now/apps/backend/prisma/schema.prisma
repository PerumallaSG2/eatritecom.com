// EatRite - Complete Meal Delivery Platform Schema
// Web design by Sairam Perumalla

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  firstName String?
  lastName  String?
  phone     String?
  role      String   @default("USER")
  companyId String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  subscriptions Subscription[]
  orders        Order[]
  preferences   UserPreference?
  profile       UserProfile?
  addresses     Address[]
  company       Company? @relation(fields: [companyId], references: [id])
  tasteProfile  TasteProfile?
  
  // Wellness tracking
  wellnessScore WellnessScore[]
  achievements  UserAchievement[]

  @@map("users")
}

model UserProfile {
  id                  String   @id @default(cuid())
  userId              String   @unique
  age                 Int
  gender              String
  height              Float    // in cm
  weight              Float    // in kg
  activityLevel       String
  healthGoals         String
  dietaryRestrictions String?
  allergies           String?
  mealsPerDay         Int      @default(3)
  weeklyBudget        String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}

model UserPreference {
  id            String   @id @default(cuid())
  userId        String   @unique
  dietaryGoals  String[]
  allergies     String[]
  dislikes      String[]
  mealsPerWeek  Int      @default(10)
  calorieTarget Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Address {
  id           String  @id @default(cuid())
  userId       String
  firstName    String
  lastName     String
  street       String
  city         String
  state        String
  zipCode      String
  country      String  @default("US")
  isDefault    Boolean @default(false)
  instructions String?

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@map("addresses")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  meals Meal[]

  @@map("categories")
}

model Meal {
  id              String   @id @default(cuid())
  name            String
  description     String
  shortDescription String?
  imageUrl        String?
  localImagePath  String? // Local branded image path
  categoryId      String
  ingredients     String[]
  allergens       String[]
  nutritionFacts  Json
  price           Decimal  @db.Decimal(10, 2)
  calories        Int
  protein         Int
  carbs           Int
  fat             Int
  fiber           Int?
  sugar           Int?
  sodium          Int?
  isActive        Boolean  @default(true)
  isPopular       Boolean  @default(false)
  prepTime        Int? // minutes
  spiceLevel      Int?     @default(0) // 0-5 scale
  cuisineType     String?  // 'italian', 'asian', 'mediterranean'
  complexity      String?  @default("moderate") // 'simple', 'moderate', 'complex'
  wellnessScore   Int?     @default(70) // 0-100 wellness rating
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  category         Category         @relation(fields: [categoryId], references: [id])
  orderItems       OrderItem[]
  bulkOrderItems   BulkOrderItem[]
  weeklyMenuMeals  WeeklyMenuMeal[]
  featuredInMenus  WeeklyMenu[]

  @@map("meals")
}

model Plan {
  id            String   @id @default(cuid())
  name          String
  description   String
  mealsPerWeek  Int
  pricePerMeal  Decimal  @db.Decimal(10, 2)
  totalPrice    Decimal  @db.Decimal(10, 2)
  discount      Decimal? @db.Decimal(5, 2)
  isActive      Boolean  @default(true)
  isPopular     Boolean  @default(false)
  features      String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  subscriptions Subscription[]

  @@map("plans")
}

model Subscription {
  id              String            @id @default(cuid())
  userId          String
  planId          String
  status          SubscriptionStatus @default(ACTIVE)
  startDate       DateTime
  nextDeliveryDate DateTime?
  pausedUntil     DateTime?
  cancelledAt     DateTime?
  stripeSubscriptionId String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  plan   Plan   @relation(fields: [planId], references: [id])
  orders Order[]

  @@map("subscriptions")
}

model Order {
  id             String      @id @default(cuid())
  userId         String
  subscriptionId String?
  addressId      String
  status         OrderStatus @default(PENDING)
  orderNumber    String      @unique
  subtotal       Decimal     @db.Decimal(10, 2)
  tax            Decimal     @db.Decimal(10, 2)
  shipping       Decimal     @db.Decimal(10, 2)
  total          Decimal     @db.Decimal(10, 2)
  deliveryDate   DateTime?
  deliveredAt    DateTime?
  trackingNumber String?
  notes          String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])
  address      Address       @relation(fields: [addressId], references: [id])
  items        OrderItem[]

  @@map("orders")
}

model OrderItem {
  id       String  @id @default(cuid())
  orderId  String
  mealId   String
  quantity Int
  price    Decimal @db.Decimal(10, 2)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  meal  Meal  @relation(fields: [mealId], references: [id])

  @@map("order_items")
}

// Contact form submissions
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contacts")
}

// Newsletter subscriptions
model Newsletter {
  id        String   @id @default(cuid())
  email     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("newsletter")
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
}

// Corporate models
model Company {
  id                String   @id @default(cuid())
  name              String
  code              String   @unique // Company signup code
  email             String   @unique
  phone             String?
  address           String?
  tier              CompanyTier @default(TIER_A)
  isActive          Boolean  @default(true)
  billingContact    String?
  employeeLimit     Int?
  discountPercent   Decimal? @db.Decimal(5, 2)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relationships
  users             User[]
  bulkOrders        BulkOrder[]
  corporateAnalytics CorporateAnalytics[]

  @@map("companies")
}

model BulkOrder {
  id          String      @id @default(cuid())
  companyId   String
  adminUserId String
  orderDate   DateTime
  deliveryDate DateTime
  totalMeals  Int
  totalAmount Decimal     @db.Decimal(10, 2)
  status      BulkOrderStatus @default(PENDING)
  recurring   Boolean     @default(false)
  frequency   String? // 'daily', 'weekly'
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  company     Company     @relation(fields: [companyId], references: [id])
  items       BulkOrderItem[]

  @@map("bulk_orders")
}

model BulkOrderItem {
  id          String    @id @default(cuid())
  bulkOrderId String
  mealId      String
  quantity    Int
  price       Decimal   @db.Decimal(10, 2)

  bulkOrder   BulkOrder @relation(fields: [bulkOrderId], references: [id], onDelete: Cascade)
  meal        Meal      @relation(fields: [mealId], references: [id])

  @@map("bulk_order_items")
}

// Wellness & Gamification models
model WellnessScore {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @db.Date
  score     Int      // Daily wellness score (0-100)
  calories  Int?
  protein   Int?
  vegetables Int?
  hydration Int?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("wellness_scores")
}

model Achievement {
  id          String   @id @default(cuid())
  name        String
  description String
  icon        String
  points      Int
  category    String   // 'health', 'consistency', 'social'
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  userAchievements UserAchievement[]

  @@map("achievements")
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  earnedAt      DateTime @default(now())
  points        Int

  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id])

  @@unique([userId, achievementId])
  @@map("user_achievements")
}

// Analytics models
model CorporateAnalytics {
  id                  String   @id @default(cuid())
  companyId           String
  weekStarting        DateTime @db.Date
  totalOrders         Int      @default(0)
  totalEmployees      Int      @default(0)
  activeEmployees     Int      @default(0)
  participationRate   Decimal  @db.Decimal(5, 2) @default(0)
  avgWellnessScore    Decimal? @db.Decimal(5, 2)
  totalSpend          Decimal  @db.Decimal(10, 2) @default(0)
  topMeals            Json? // Array of meal IDs with counts
  createdAt           DateTime @default(now())

  company             Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, weekStarting])
  @@map("corporate_analytics")
}

// Testimonials
model Testimonial {
  id        String   @id @default(cuid())
  name      String
  position  String?
  company   String?
  content   String
  rating    Int      @default(5)
  isApproved Boolean @default(false)
  isFeatured Boolean @default(false)
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}

// Taste Profile
model TasteProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  spiceTolerance    Int      // 1-5 scale
  proteinPreference String[] // ['chicken', 'fish', 'beef', 'plant-based']
  cuisinePreference String[] // ['italian', 'asian', 'mediterranean', etc.]
  dietaryGoals      String   // 'weight-loss', 'muscle-gain', 'maintenance'
  allergens         String[]
  healthConditions  String[]
  mealComplexity    String   // 'simple', 'moderate', 'complex'
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("taste_profiles")
}

// Weekly Menu Management
model WeeklyMenu {
  id          String   @id @default(cuid())
  weekStart   DateTime @db.Date
  weekEnd     DateTime @db.Date
  isActive    Boolean  @default(false)
  featuredMealId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  meals       WeeklyMenuMeal[]
  featuredMeal Meal? @relation(fields: [featuredMealId], references: [id])

  @@unique([weekStart, weekEnd])
  @@map("weekly_menus")
}

model WeeklyMenuMeal {
  id           String     @id @default(cuid())
  weeklyMenuId String
  mealId       String
  displayOrder Int        @default(0)
  isSpecial    Boolean    @default(false)

  weeklyMenu   WeeklyMenu @relation(fields: [weeklyMenuId], references: [id], onDelete: Cascade)
  meal         Meal       @relation(fields: [mealId], references: [id])

  @@unique([weeklyMenuId, mealId])
  @@map("weekly_menu_meals")
}

enum CompanyTier {
  TIER_A  // 10-30 employees
  TIER_B  // 30-100 employees  
  TIER_C  // 100-300 employees
}

enum BulkOrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  SHIPPED
  DELIVERED
  CANCELLED
}